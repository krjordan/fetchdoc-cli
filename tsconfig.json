{
	"compilerOptions": {
		"rootDir": "./src",
		"target": "ESNext",
		"module": "CommonJS",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"noEmit": true,
		"skipLibCheck": true,
		"outDir": "./dist"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
